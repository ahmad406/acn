 "css": ".print-format {\r\n\r\n    padding: 0.1in !important;\r\n    font-size: 7.5pt;\r\n  \r\n}\r\n.print-format th {\r\n   \r\n    padding: 3px !important;\r\n}\r\n\r\n\r\n.customer-wrapper {\r\n    position: relative;\r\n    min-height: 130px;   /* reserve space */\r\n}\r\n.main{\r\n    border: 2px black solid;\r\n    padding: 7px;\r\n}\r\n\r\n.customer-details {\r\n    width: 65%;\r\n}\r\n\r\n.qr-container {\r\n    position: absolute;\r\n    top: 0;\r\n    right: 0;\r\n    width: 110px;\r\n    text-align: center;\r\n}\r\n\r\n\r\n.meta-table {\r\n    width: 100%;\r\n    border-collapse: collapse;\r\n    margin-bottom: 10px;\r\n}\r\n\r\n.meta-table td {\r\n    border: none !important;\r\n    padding: 2px 4px;\r\n    text-align: left !important;\r\n    vertical-align: top;\r\n}\r\n",
