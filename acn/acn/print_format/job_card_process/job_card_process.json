 "html": "<!doctype html>\r\n<html lang=\"en\">\r\n<head>\r\n  <meta charset=\"utf-8\" />\r\n  <meta name=\"viewport\" content=\"width=device-width,initial-scale=1\" />\r\n  <title>Contract Review Cum Job Card - ACE CARBO NITRIDERS</title>\r\n  <style>\r\n    @page { size: A4; margin: 10mm; }\r\n    body {\r\n      font-family: Arial, Helvetica, sans-serif;\r\n      font-size: 12px;\r\n      margin: 0;\r\n      padding: 0;\r\n      -webkit-print-color-adjust: exact;\r\n    }\r\n    .page {\r\n      width: 210mm;\r\n      min-height: 297mm;\r\n      margin: auto;\r\n      background: #fff;\r\n      padding: 8mm;\r\n      box-sizing: border-box;\r\n    }\r\n    .header {\r\n      display: flex;\r\n      align-items: center;\r\n      justify-content: space-between;\r\n      border-bottom: 2px solid #000;\r\n      padding-bottom: 5px;\r\n    }\r\n    .header img {\r\n      width: 80px;\r\n      height: 60px;\r\n      object-fit: contain;\r\n      border: 1px solid #000;\r\n    }\r\n    .header-center {\r\n      flex: 1;\r\n      text-align: center;\r\n    }\r\n    .header-center h1 {\r\n      color: #0a2b6f;\r\n      font-size: 24px;\r\n      font-weight: bold;\r\n      margin: 0;\r\n    }\r\n    .header-center h2 {\r\n      font-size: 14px;\r\n      margin: 0;\r\n      border: 1px solid #000;\r\n      display: inline-block;\r\n      padding: 3px 10px;\r\n    }\r\n    .header-right img {\r\n      width: 60px;\r\n      height: 60px;\r\n      object-fit: contain;\r\n      border: 1px solid #000;\r\n    }\r\n    .details, .requirements, .process, .inspection, .dispatch {\r\n      border: 1px solid #000;\r\n      margin-top: 6px;\r\n      padding: 5px;\r\n    }\r\n    table {\r\n      width: 100%;\r\n      border-collapse: collapse;\r\n    }\r\n    th, td {\r\n      border: 1px solid #000;\r\n      padding: 4px;\r\n      font-size: 11px;\r\n      vertical-align: top;\r\n    }\r\n    th {\r\n      background: #e6f0ff;\r\n      text-align: center;\r\n    }\r\n    .double {\r\n      display: flex;\r\n      gap: 5px;\r\n    }\r\n    .half {\r\n      flex: 1;\r\n      display: flex;\r\n      flex-direction: column;\r\n    }\r\n    .half .image-space {\r\n      margin-top: auto;\r\n      align-self: flex-end;\r\n    }\r\n    .large-box {\r\n      height: 180px;\r\n      border: 1px solid #000;\r\n      margin-top: 5px;\r\n    }\r\n    .large-area {\r\n      height: 250px;\r\n      border: 1px solid #000;\r\n      margin-top: 5px;\r\n      position: relative;\r\n    }\r\n    .signature {\r\n      display: flex;\r\n      justify-content: space-between;\r\n      margin-top: 10px;\r\n    }\r\n    .image-space {\r\n      width: 100%;\r\n      height: 200px;\r\n      text-align: center;\r\n      font-size: 11px;\r\n      color: #555;\r\n      display: flex;\r\n      align-items: center;\r\n      justify-content: center;\r\n      margin-bottom: 5px;\r\n    }\r\n  </style>\r\n</head>\r\n<body>\r\n  <div class=\"page\">\r\n    <!-- HEADER -->\r\n    <div class=\"header\">\r\n      <!--<img src=\"\" alt=\"Left Logo\" />-->\r\n      <div class=\"header-center\">\r\n        <h1>ACE CARBO NITRIDERS</h1>\r\n        <h2>CONTRACT REVIEW CUM JOB CARD</h2>\r\n      </div>\r\n      <div class=\"header-right\">\r\n        <!--<img src=\"\" alt=\"Right Logo\" />-->\r\n      </div>\r\n    </div>\r\n\r\n    <!-- DETAILS -->\r\n    <div class=\"details\">\r\n      <div class=\"double\">\r\n        <div class=\"half\">\r\n          <table>\r\n            <tr><td><b>Process</b></td><td>{{doc.process_name}}</td></tr>\r\n            <tr><td><b>Customer Name</b></td><td>{{doc.customer_name}}</td></tr>\r\n            <tr><td><b>Item Description</b></td><td>{{doc.item_name}}</td></tr>\r\n              <tr><td><b>Part No/Drg No:</b></td><td>{{doc.part_no}}</td></tr>\r\n                 <tr><td><b>Qnty:</b></td><td>{{doc.qty_in_nos}} Nos /{{doc.qty_in_kgs}} KGs</td></tr>\r\n          </table>\r\n        </div>\r\n        <div class=\"half\">\r\n          <table>\r\n            <tr><td><b>Job Card No. & Date</b></td><td>{{doc.name}} - {{doc.generated_on}}</td></tr>\r\n            <tr><td><b>Customer DC/Ref No</b></td><td>{{doc.customer_dc}}</td></tr>\r\n            <tr><td><b>Material</b></td><td> {{doc.material}}</td></tr>\r\n                        <tr><td><b>Incoming Visual Inspection:</b></td><td>OK / NOT OK</td></tr> \r\n          </table>\r\n        </div>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- CUSTOMER REQUIREMENT -->\r\n    <div class=\"requirements\">\r\n      <h4>CUSTOMER REQUIREMENT / SPECIFICATION</h4>\r\n      <div class=\"double\">\r\n        <div class=\"half\">\r\n          <table>\r\n            \r\n            <tr><th>INCOMING INSPECTION</th><th>Min Val</th><th>Max Val</th><th>Scale</th><th>Remarks</th></tr>\r\n              {% for d in doc.customer_requirements %}\r\n            <tr><td>{{d.process_parameter}}</td><td>{{d.minimum_value or \"\"}}</td><td>{{d.maximum_value or \"\"}}</td><td>{{d.scale}}</td><td>{{d.microstructure_cutoff or \"\"}}</td></tr>\r\n            {%endfor%}\r\n          </table>\r\n        </div>\r\n<div class=\"image-space\">\r\n  {% if doc.image %}\r\n    <img src=\"{{ doc.image }}\" alt=\"Image\" style=\"width:100%; height:auto; max-height:150px; object-fit:contain; border:1px solid #ccc;\">\r\n  {% else %}\r\n    <div style=\"width:100%; height:150px; border:1px solid #ccc; display:flex; align-items:center; justify-content:center; color:#888;\">\r\n      No Image\r\n    </div>\r\n  {% endif %}\r\n</div>\r\n\r\n      </div>\r\n    </div>\r\n\r\n    <!-- PROCESS DETAILS -->\r\n    <div class=\"process\">\r\n      <h4>PROCESS DETAILS</h4>\r\n      <div class=\"double\">\r\n        <div class=\"half\">\r\n          <table>\r\n                          {% for h in doc.sequence_lot_wise_internal_process %}\r\n            <tr><td>{{h.idx}}. {{h.internal_process}}</td></tr>\r\n          {%endfor%}\r\n          </table>\r\n        </div>\r\n     <div class=\"half\">\r\n  <div class=\"image-space\" style=\"width:100%; height:150px; border:1px solid #ccc; display:flex; align-items:center; justify-content:center;\">\r\n    {% if doc.fixturing_image %}\r\n      <img src=\"{{ doc.fixturing_image }}\" alt=\"Fixturing Image\"\r\n           style=\"max-width:100%; max-height:100%; object-fit:contain;\">\r\n    {% else %}\r\n      <span style=\"color:#888; font-size:12px;\">No Image</span>\r\n    {% endif %}\r\n  </div>\r\n</div>\r\n\r\n      </div>\r\n    </div>\r\n\r\n  <!-- INSPECTION -->\r\n<tr>\r\n  <td colspan=\"2\">\r\n    <table style=\"width:100%; border-collapse:collapse; font-family:Arial, sans-serif; font-size:12px;\">\r\n\r\n\r\n      <tr>\r\n        <!-- FINAL INSPECTION -->\r\n        <td style=\"width:25%; vertical-align:top;padding: 0;\">\r\n          <h4 style=\"margin:0 0 5px 0; text-decoration:underline; font-size:13px;\">FINAL INSPECTION</h4>\r\n          <table style=\"width:100%; border-collapse:collapse; font-size:12px;\">\r\n            {% for k in doc.parameters_with_acceptance_criteria %}\r\n            <tr><td style=\"border:1px solid #000; padding:3px;\">{{k.internal_process}}</td><td style=\"border:1px solid #000; padding:3px;\">{{k.minimum_value or \"\"}} - {{k.maximum_value  or \"\"}} {{k.scale or \"\"}}</td></tr>\r\n           \r\n         {%endfor%}\r\n          </table>\r\n        </td>\r\n        <td style=\"width:25%; text-align:center; vertical-align:middle; border:1px solid #000;\">\r\n<div style=\"width:100%; height:100px; border:1px solid #000; display:flex; align-items:center; justify-content:center;\">\r\n  {% if doc.location_image %}\r\n    <img src=\"{{ doc.location_image }}\" alt=\"Final Inspection Photo\"\r\n         style=\"max-width:100%; max-height:100%; object-fit:contain;\">\r\n  {% else %}\r\n    <span style=\"font-size:12px; color:#555;\">No Inspection Photo</span>\r\n  {% endif %}\r\n</div>\r\n\r\n        </td>\r\n      </tr>\r\n    </table>\r\n  </td>\r\n</tr>\r\n\r\n\r\n    <!-- DISPATCH DETAILS -->\r\n    <div class=\"dispatch\">\r\n      <h4>DESPATCH DETAILS</h4>\r\n      <table>\r\n        <tr>\r\n          <th>INVOICE NO & DATE</th>\r\n          <th>TEST PIECE</th>\r\n          <th>DELIVERY CHALLAN NO</th>\r\n          <th>TEST CERTIFICATE NO</th>\r\n        </tr>\r\n        <tr><td colspan=\"4\" style=\"height:30px\"></td></tr>\r\n      </table>\r\n    </div>\r\n\r\n    <!-- SIGNATURES -->\r\n    <div class=\"signature\">\r\n      <span>Prepared By: ____________</span>\r\n      <span>Approved By: ____________</span>\r\n    </div>\r\n  </div>\r\n</body>\r\n</html>\r\n",
